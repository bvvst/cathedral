---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import Arrow from "../components/Arrow.astro";

const posts = (await getCollection("blog"))
    .filter((post) => !post.data.authors.includes("ignore"))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .slice(0, 3);
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body class="flex-col w-screen p-4">
        <nav class="max-w-lg w-full flex justify-between mx-auto mt-4">
            <span class="text-2xl">â›ªðŸ”­</span>
            <div class="flex text-brown-300 font-normal underline gap-2">
                <a href="/rss.xml" target="_blank">rss</a>
                <a
                    href="https://github.com/cathedral-research/cathedral"
                    target="_blank">github</a
                >
                <a href="https://youtu.be/qQzdAsjWGPg" target="_blank">my way</a
                >
            </div>
        </nav>
        <main class="max-w-lg w-full flex flex-col mx-auto">
            <h1 class="mt-10 font-serif text-2xl">Cathedral Research Group</h1>
            <h1 class="mt-8 text-brown-300 font-serif">newest posts</h1>
            <ul class="flex flex-col mt-2 gap-1">
                {
                    posts.map((post) => (
                        <li>
                            <a
                                class=" transition-colors hover:bg-eggshell-50/60 bg-eggshell-50 gap-0.5 flex justify-between p-2 px-3 rounded-md border border-eggshell-200"
                                href={`/blog/${post.id}/`}
                            >
                                <h4 class="font-medium">{post.data.title}</h4>
                                <p class="text-brown-300m">
                                    <FormattedDate date={post.data.pubDate} />
                                </p>
                            </a>
                        </li>
                    ))
                }
            </ul>
            <a
                href="/blog"
                class="mt-2 flex items-center transition-transform hover:translate-x-0.5 font-medium"
                >view all <Arrow /></a
            >
            <h1 class="mt-8 text-brown-300 font-serif">minecraft server</h1>

            <div class="flex gap-2 mt-2">
                <div
                    class="px-3 py-2 border border-brown-300/20 rounded-md w-full flex justify-between"
                >
                    play.cathedralresearch.com
                    <button
                        onclick="alert('hi')"
                        class="font-medium transition-transform hover:scale-[101%] hover:cursor-pointer"
                    >
                        Copy Address
                    </button>
                </div>
            </div>
        </main>
    </body>
</html>
